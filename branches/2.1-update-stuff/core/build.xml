		<property name="destdir" value="${temp.folder}/SVNPluginCore.jar.bin"/>
		<delete dir="${temp.folder}/SVNPluginCore.jar.bin"/>
		<mkdir dir="${temp.folder}/SVNPluginCore.jar.bin"/>
